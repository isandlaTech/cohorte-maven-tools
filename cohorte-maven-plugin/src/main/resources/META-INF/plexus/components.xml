<component-set>
    <components>
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>cohorte-bundle</role-hint>
            <implementation>
                org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
            </implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <!-- START SNIPPET: bundle-lifecycle -->
                        <phases>
                            <validate>
                                org.cohorte.plugins:cohorte-maven-plugin:validate
                            </validate>
                            <process-resources>                                
                                org.cohorte.plugins:cohorte-maven-plugin:resources
                            </process-resources>
                            <compile>
                                org.apache.maven.plugins:maven-compiler-plugin:3.1:compile
                            </compile>
                            <process-test-resources>
                                org.apache.maven.plugins:maven-resources-plugin:2.6:testResources
                            </process-test-resources>
                            <test-compile>
                                org.apache.maven.plugins:maven-compiler-plugin:3.1:testCompile
                            </test-compile>
                            <test>
                                org.cohorte.plugins:cohorte-maven-plugin:test
                            </test>
                            <package>
                                org.cohorte.plugins:cohorte-maven-plugin:package
                            </package>
                            <install>
                                org.apache.maven.plugins:maven-install-plugin:2.4:install
                            </install>
                            <deploy>
                                org.apache.maven.plugins:maven-deploy-plugin:2.7:deploy,
                                org.cohorte.plugins:cohorte-maven-plugin:deploy
                            </deploy>
                        </phases>
                        <!-- END SNIPPET: bundle-lifecycle -->
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>cohorte-bundle</role-hint>
            <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
            <configuration>
              <type>cohorte-bundle</type>
              <includesDependencies>false</includesDependencies>
              <!--language>python</language-->
              <extension>zip</extension>
              <addedToClasspath>true</addedToClasspath>
              <packaging>cohorte-bundle</packaging>
            </configuration>
      </component>
    </components>
</component-set>